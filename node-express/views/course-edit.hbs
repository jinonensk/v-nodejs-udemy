<h1>Редактировать {{course.title}}</h1>

<form action="/courses/edit" method="POST">
  <div class="input-field">
    <input id="title" type="text" name="title" class="validate" required value="{{course.title}}">
    <label for="title">Название курса</label>
    <span class="helper-text" data-error="Введите название"></span>
  </div>
  <div class="input-field">
    <input id="price" type="text" name="price" class="validate" required min="1" value="{{course.price}}">
    <label for="price">Цена курса</label>
    <span class="helper-text" data-error="Введите цену"></span>
  </div>
  <div class="input-field">
    <input id="img" type="text" name="img" class="validate" required value="{{course.img}}">
    <label for="img">URL картинки</label>
    <span class="helper-text" data-error="Введите URL картинки"></span>
  </div>

  <Input type="hidden" name="id" value={{course.id}} />
  <input type="hidden" name="_csrf" value={{csrf}}>

  <button class="btn btn-primary">Редактировать курс</button>
</form>